<div class="container">
<p id="notice"><%= notice %></p>

    <h1>Listing Users</h1>

<table class="table table-striped table-condensed">
    <thead>
        <tr>
          <th class="col-sm-2">Photo</th>
          <th class="col-sm-2">Name</th>
          <th class="col-sm-2">Email</th>
          <th class="col-sm-4">Action</th>
          <th colspan="2"></th>
        </tr>
    </thead>

    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= image_tag user.photo.url(:small) %></td>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td>
                    <%= link_to content_tag(:div, 'Show', class: 'btn btn-primary'), user_path(user) %>
                    <%= link_to content_tag(:div, 'Edit', class: 'btn btn-primary'), edit_user_path(user) %>
                    <%= link_to content_tag(:div, 'Delete', class: 'btn btn-primary'), user, method: :delete, data: { confirm: 'Are you sure?' } %>
                    <% if not user.verified %>
                    <%= link_to content_tag(:div, 'Verify', class: 'btn btn-warning'), verify_user_path(user), data: { confirm: 'Are you sure?' } %>   
                    <% end %>                 
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<br>

<%= link_to content_tag(:div, 'New user', class: 'btn btn-primary'), new_user_path %>
</div>
