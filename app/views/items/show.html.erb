<div class="container">
<p id="notice"><%= notice %></p>

<p>
  <% if rented? %>
    You have rented this item!
  <% else %>
    You can rent this item.
    <a href="/items/<%= @item.id %>/rent">RENT IT!</a>
  <% end %>

</p>


<p>
  <strong>Name:</strong>
  <%= @item.name %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @item.quantity %>
</p>

<p>
  <strong>Category:</strong>
  <%= @item.category %>
</p>

<p>
  <strong>Photo:</strong><br/>
  <%= image_tag @item.photo.url(:large) %>
  <br/>
</p>
<%= link_to 'Edit', edit_item_path(@item) %> |
<%= link_to 'Back', items_path %>
</div>