<p id="notice"><%= notice %></p>

<h1>Listing Event Days</h1>

<table>
  <thead>
    <tr>
      <th>eventID</th>
      <th>Date</th>
      <th>Time begin</th>
      <th>Time end</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_days.each do |event_day| %>
      <tr>
        <td><%= link_to event_day.event.title, event_day.event %></td>
        <td><%= event_day.date %></td>
        <td><%= event_day.time_begin %></td>
        <td><%= event_day.time_end %></td>
        <td><%= link_to 'Show', event_event_day_path(event_day.event.id, event_day) %></td>
        <td><%= link_to 'Edit', edit_event_event_day_path(event_day.event.id, event_day) %></td>
        <td><%= link_to 'Destroy', [event_day.event, event_day], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

